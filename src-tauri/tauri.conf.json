{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "minimal-todo-app",
  "version": "0.1.0",
  "identifier": "com.minimal-todo-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "minimal-todo-app",
        "width": 550,
        "height": 450,
        "resizable": false,
        "fullscreen": false,
        "hiddenTitle": false,
        "titleBarStyle": "Overlay",
        "alwaysOnTop": true,
        "closable": false,
        "minimizable": false,
        "maximizable": false,
        "decorations": false,
        "focus": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/**/*"
    ]
  }
}